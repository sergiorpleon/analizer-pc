# Configuración de la Aplicación
APP_NAME="Analizer PC"
APP_ENV=local

# Proveedor de Embeddings (gemini | ollama)
EMBEDDING_PROVIDER=ollama

# Dimensión del vector (auto-detectado si no se especifica)
# - Gemini (text-embedding-004): 768 dimensiones
# - Ollama (llama3): 4096 dimensiones
# VECTOR_DIMENSION=4096

# Configuración Gemini (Requerido si EMBEDDING_PROVIDER=gemini)
GEMINI_API_KEY=tu_clave_aqui

# Origen de Datos (local | github)
DATA_SOURCE=github

# Configuración de Base de Datos
DB_HOST=db
DB_NAME=ai_db
DB_USER=user
DB_PASSWORD=password
DB_PORT=5432

# Configuración Ollama
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama3
