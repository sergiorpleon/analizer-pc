{
    "name": "sergiorpleon/analizer-pc",
    "description": "Sistema de búsqueda de componentes PC usando embeddings vectoriales con Ollama y PostgreSQL",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Sergio RP Leon",
            "email": "sergiorpleon@example.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "guzzlehttp/guzzle": "^7.0",
        "ext-pdo": "*",
        "ext-pgsql": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "post-autoload-dump": [
            "@php -r \"echo '\\n✅ PSR-4 Autoloader generado correctamente\\n';\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}